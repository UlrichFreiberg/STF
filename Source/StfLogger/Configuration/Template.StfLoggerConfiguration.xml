<?xml version="1.0"?>
<configuration xmlns="http://www.testautomation.dk/stfConfiguration" version="2013.04.21.0">
    <section name="StfKernel">
        <section name="StfLogger">
            <!-- Whether to overwrite an existing log file -->
            <key name="OverwriteLogFile" value="false" />

            <!-- Whether log to file. -->
            <key name="LogToFile" value="true" />

            <!-- log title -->
            <key name="LogTitle" value="LogTitle" />

            <!-- log file name -->
            <key name="LogFileName" value="c:\temp\Ovid_defaultlog.html" />

            <!-- alert interval. How many seconds is acceptable between two log entries -->
            <key name="AlertLongInterval" value="true" />

            <!-- log level - logging below this level will not nake it into the log file -->
            <key name="LogLevel" value="debug" />

            <!-- path to logo image file -->
            <key name="PathToLogoImageFile" value="" />

            <!-- whether to log a screenshot when calling log fail -->
            <key name="ScreenshotOnLogFail" value="true" />

            <!-- Whether log entries with newlines will be mapped to html tag BR -->
            <key name="MapNewlinesToBr" value="false" />

            <!-- Reset the idle timer for the logger thread to prevent the system from sleeping or starting screensaver. Value in minutes where 0 or below disables the idle timer reset -->
            <key name="KeepAliveInterval" value="5" />
        </section>
    </section>
</configuration>